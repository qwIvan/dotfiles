#!/bin/sh
HOME=/home/ivan
"$HOME"/bin/wall &
"$HOME"/bin/switch-wallpaper -W 3286 &
setxkbmap -option ctrl:swapcaps -option altwin:swap_lalt_lwin &
sudo ntpd -gq && sudo hwclock -w &

pgrep "^chrome$" || google-chrome-stable &
pgrep "^compton$" || compton --shadow-exclude 'class_g = "Sogou-qimpanel"' --shadow-exclude 'class_g = "Wine"' &
fcitx &
sudo pdnsd -c "$HOME"/parent_pdnsd.conf &
sudo pdnsd -c "$HOME"/pdnsd.conf &
sudo pdnsd -c "$HOME"/pdnsd_etc.conf &
sudo chinadns-1.3.2/src/chinadns -c "$HOME"/.chnroute -s 127.0.1.1:1212,127.0.0.1:1144 -p 5355 -m &
ss-redir -c "$HOME"/ss_config.json &
sudo ~/adbyby/adbyby &
